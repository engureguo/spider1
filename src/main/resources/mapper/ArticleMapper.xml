<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.engure.magic.oospider_cuplife.mapper.ArticleMapper">

    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="com.engure.magic.oospider_cuplife.pojo.Article">
        <id column="id" property="id" />
        <result column="title" property="title" />
        <result column="article" property="article" />
        <result column="pubDate" property="pubdate" />
        <!--column是关键字，不要用做列名-->
        <result column="column0" property="column0" />
        <result column="link" property="link" />
    </resultMap>

    <!-- 通用查询结果列 -->
    <sql id="Base_Column_List">
        title, id, article, pubDate, column0 ,link
    </sql>

</mapper>
